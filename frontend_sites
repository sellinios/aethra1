server {
    listen 80;
    server_name kairos.gr www.kairos.gr;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name kairos.gr www.kairos.gr;

    ssl_certificate /etc/letsencrypt/live/kairos.gr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kairos.gr/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location /admin {
        proxy_pass http://unix:/home/sellinios/aethra/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /static/ {
        alias /home/sellinios/aethra/frontend/kairos/build/static/;
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    location /static/admin/ {
        alias /home/sellinios/aethra/frontend/kairos/build/static/admin/;
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    location /api/ {
        proxy_pass http://unix:/home/sellinios/aethra/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    location / {
        root /home/sellinios/aethra/frontend/kairos/build/;
        try_files $uri /index.html;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
